{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext", // or "ES6"
      "declaration": true, // This allows TypeScript to emit declaration files (.d.ts)
      "declarationDir": "dist",
      "jsx": "react", // Ensure this matches your React version (or "react-jsx" for React 17+)
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  